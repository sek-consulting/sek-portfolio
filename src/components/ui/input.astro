---
interface Props {
  class?: string
  [x: string]: any
}

const { class: className, ...rest } = Astro.props
---

<input
  class:list={[
    "flex h-10 w-full rounded-md border border-zinc-300 bg-transparent py-2 px-3 text-sm placeholder:text-zinc-400 focus:outline-none focus:ring-2 focus:ring-zinc-400 focus:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50",
    className
  ]}
  {...rest}
/><slot />
